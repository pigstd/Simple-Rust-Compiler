; EXPECT: explicit continue block with multiple loop labels
target triple = "unknown-unknown-unknown"
target datalayout = ""

define i32 @sum_even_under(i32 %limit) {
entry.0:
    %i.addr.0 = alloca i32
    %sum.addr.0 = alloca i32
    store i32 0, ptr %i.addr.0
    store i32 0, ptr %sum.addr.0
    br label %loop.cond.0

loop.cond.0:
    %i.val.0 = load i32, ptr %i.addr.0
    %has_next.0 = icmp slt i32 %i.val.0, %limit
    br i1 %has_next.0, label %loop.body.0, label %loop.exit.0

loop.body.0:
    %is_even_mask.0 = and i32 %i.val.0, 1
    %is_even.0 = icmp eq i32 %is_even_mask.0, 0
    br i1 %is_even.0, label %loop.accumulate.0, label %loop.continue.0

loop.accumulate.0:
    %current.0 = load i32, ptr %sum.addr.0
    %updated.0 = add i32 %current.0, %i.val.0
    store i32 %updated.0, ptr %sum.addr.0
    br label %loop.continue.0

loop.continue.0:
    %next.0 = add i32 %i.val.0, 1
    store i32 %next.0, ptr %i.addr.0
    br label %loop.cond.0

loop.exit.0:
    %result.0 = load i32, ptr %sum.addr.0
    ret i32 %result.0
}
