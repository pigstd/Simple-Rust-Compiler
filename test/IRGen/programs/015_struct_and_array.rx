// Test struct creation and array manipulation
// Generator: Codex
struct Point {
    x: i32,
    y: i32,
}

fn make_point(base: i32) -> Point {
    Point { x: base, y: base + 1 }
}

fn main() {
    let p: Point = make_point(5);
    let arr: [i32; 3] = [1, 2, 3];
    let mut idx: usize = 0;
    let mut sum: i32 = 0;
    while (idx < 3) {
        sum = sum + arr[idx];
        idx = idx + 1;
    }
    let total: i32 = sum + p.x + p.y; // 6 + 5 + 6 = 17
    exit(total - 17);
}
