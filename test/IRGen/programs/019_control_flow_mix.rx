// Cover nested control-flow with while + continue + bitwise logic.
// Generator: Codex

fn weigh(limit: i32) -> i32 {
    let mut sum: i32 = 0;
    let mut i: i32 = 0;
    while (i < limit) {
        if (i == 3) {
            i = i + 1;
            continue;
        }

        let parity: i32 = i & 1;
        if (parity == 0) {
            sum = sum + i;
        } else {
            sum = sum - i;
        }

        i = i + 1;
    }
    sum
}

fn main() {
    let mut code: i32 = 0;
    if (weigh(6) != 0) {
        code = 1;
    }
    if (weigh(1) != 0) {
        code = 2;
    }
    exit(code);
}
